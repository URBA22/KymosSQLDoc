{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "target": "es6",
        "module": "commonjs",
        "sourceMap": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@core*": [
                "src/core/index.ts"
            ],
            "@core/*": [
                "src/core/*"
            ],
            "@services*": [
                "src/services/index.ts"
            ],
            "@services/*": [
                "src/services/*"
            ]
        }
    }
}